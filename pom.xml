    <groupId>org.icrisat</groupId>
    <artifactId>gdms</artifactId>
    <packaging>war</packaging>
    <name>GDMS</name>
    <version>2.0.0</version>

    <properties>
        <jetty.version>7.5.0.v20110901</jetty.version>
        <vaadin.version>6.8.10</vaadin.version>
